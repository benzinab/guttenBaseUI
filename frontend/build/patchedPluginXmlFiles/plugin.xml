<idea-plugin>
  <version>1.0-SNAPSHOT</version>
  <change-notes>
      Add change notes here.&lt;br&gt;
      &lt;em&gt;most HTML tags may be used&lt;/em&gt;</change-notes>
  <idea-version since-build="202.7660" until-build="202.*"/>
  <id>de.akquinet.jboscc.guttenBasePlugin</id>
  <name>GuttenBase</name>
  <vendor email="benzinab@akquinet.com" url="http://www.akquinet.com">Akquinet</vendor>
  <description>
        An IntelliJ Plugin for the database migration library "GuttenBase".
    </description>
  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.database</depends>
  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="Guttenbase" secondary="true" icon="AllIcons.General.Modified" anchor="right" factoryClass="de.akquinet.jbosscc.guttenBasePlugin.extensions.GuttenWindowFactory"/>
  </extensions>
  <extensionPoints/>
  <actions>
    <group id="GuttenBase.database.action1" text="GuttenBase" description="GuttenBase plugin">
      <add-to-group group-id="DatabaseViewPopupMenu" anchor="last"/>
      <action class="de.akquinet.jbosscc.guttenBasePlugin.actions.ShowAction" id="GuttenBase.Actions.ShowAction" text="Migrate Database"/>
    </group>
  </actions>
</idea-plugin>
